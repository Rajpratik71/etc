############################################################
# COMMAND PROMPT
############################################################
function wolf_update_ps1()
{
    local exit_code=$?
    local last_cmd_exit_code
    local time
    local username
    local work_dir
    local prefix
    local suffix

    if [ $exit_code -eq 0 ] 
    then
        if [ "$TERMINAL_PROFILE" = "Light" ]
        then
            last_cmd_exit_code="\[\033[47;37m\]"
        else
            last_cmd_exit_code="\[\033[40;37m\]"
        fi
    else
        # reverse on error
        last_cmd_exit_code="\[\033[35;7m\]${exit_code}âœ˜"
    fi
    prefix="\[\033[37m\]["
    time="\[\033[36m\]\t"
    if [ $(id -u) = '0' ]
    then
        username="\[\033[36m\]\u"
    else
        username="\[\033[37m\]\u"
    fi
    work_dir="\[\033[33m\]\W"
    suffix="\[\033[37m\]]\[\033[0m\] "

    export PS1="$last_cmd_exit_code$prefix$time $username $work_dir$suffix"
}
export PROMPT_COMMAND="wolf_update_ps1"
#export PROMPT_DIRTRIM=

